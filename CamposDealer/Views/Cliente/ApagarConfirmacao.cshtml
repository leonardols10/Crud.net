@model ClienteModel
@{
    ViewData["Title"] = "Confirmação de apagar o Cliente";
}
<div class="text-center">
    <h3>Realmente deseja apagar o cliente (@Model.Nome)? </h3>


</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Cliente" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Cliente" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar Exclusão</a>




    