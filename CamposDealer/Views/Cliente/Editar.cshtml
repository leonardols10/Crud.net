@model ClienteModel
@{
    ViewData["Title"] = "Editar Cliente";
}
<div class="text-center">


    <h1 class="display-4">Editar Cliente</h1>

</div>

<form asp-controller="Cliente" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do Cliente">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="cidade">Cidade</label>
        <input type="text" asp-for="Cidade" class="form-control" placeholder="Digite a cidade do Cliente">
        @Html.ValidationMessageFor(x => x.Cidade)

    </div>

    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Cliente" asp-action="Index" role="button">Voltar</a>
</form>




