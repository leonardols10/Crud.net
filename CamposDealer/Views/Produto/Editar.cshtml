@model ProdutoModel
@{
    ViewData["Title"] = "Editar Produto";
}
<div class="text-center">
    <h1>Editar Produto</h1>
</div>

<form asp-controller="Produto" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="descricao">Descrição</label>
        <input type="text" asp-for="Descricao" class="form-control" placeholder="Digite a descrição do produto">
        @Html.ValidationMessageFor(x => x.Descricao)
    </div>
    <div class="form-group">
        <label for="valorUnitario">Valor Unitário</label>
        <input type="text" asp-for="ValorUnitario" class="form-control" placeholder="Digite o valor unitário do produto">
        @Html.ValidationMessageFor(x => x.ValorUnitario)
    </div>
    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Produto" asp-action="Index" role="button">Voltar</a>
</form>
